<%= form_for [@team, @player], method: "put"  do |f| %>

	<%= f.text_field(:name) %>
	<%= f.text_field(:jersey) %>
	<%= submit_tag("Edit Player") %>
<% end %>

<%= form_for [@team, @player], method: "delete"  do |f| %>

	<%= submit_tag("Delete Player") %>
<% end %>